%style{:type => "text/css"}
  html,body{background-color: #eee;}
  body {padding-top: 0px;}
  == .formrails{margin:auto;}
  == .formrails .container{width:400px;}
  == .container > .content {background-color: #fff;padding: 20px;margin: 0 -20px;-webkit-border-radius: 10px 10px 10px 10px;-moz-border-radius: 10px 10px 10px 10px;border-radius: 10px 10px 10px 10px;-webkit-box-shadow: 0 1px 2px rgba(0,0,0,.15);-moz-box-shadow: 0 1px 2px rgba(0,0,0,.15);box-shadow: 0 1px 2px rgba(0,0,0,.15);}
  == .login-form {margin-left: 65px;} 
  legend{margin-right: -50px;font-weight: bold;color: #404040;}




%section{:id=>"features"}
  %div{:id=>"features-banner","data-stellar-background-ratio"=>"0"}
    %div{:class=>"formrails"}
      %div{:class=>"container"}
        %div{:class=>"content"}
          %div{:class=>"row"}
            %div{:class=>"login-form"}
              %h2 Astoria Login
              %hr
              = form_tag sessions_path  do
                = render :partial => "shared/messages"

                %fieldset
                  %div{:class=>"clearfix"}
                    = text_field_tag :email, nil, :placeholder => 'Email'
                  %div{:class=>"clearfix"}
                    = password_field_tag :password, nil, :placeholder=> 'Password'
                  %label{"for"=>"remember_me"}
                  =:remember_me.l
                  = check_box_tag 'remember_me'
                  %p
                  = submit_tag "Sign in" , :class=>"btn primary" 
          %div{:class=>"bottom-link-bar"}
            %div{:class=>"link-bar"}
              = link_to "Forgot your password?", "/forgot_password"
              %br
              = link_to "Didn't receive confirmation instructions?", "#"





